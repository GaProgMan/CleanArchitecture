@{
    ViewData["Title"] = "Guestbook for DDD Session @ NDC London";
}
@model CleanArchitecture.Web.ViewModels.HomePageViewModel

<div class="row">
    <div class="col-md-6">
        <h3>@Model.GuestbookName</h3>
        @if (Model.PreviousEntries.Any())
        {
            <ol class="round">
                @foreach (var entry in @Model.PreviousEntries.OrderByDescending(e => e.DateTimeCreated))
                {
                    <li class="arrow">
                        <h5>Left by: @entry.EmailAddress at roughly @entry.DateTimeCreated.ToString("yyyy/MM/dd hh:mm:ss") (UTC)</h5>
                        <span>@entry.Message</span>
                    </li>
                }
            </ol>
        }
        else
        {
            <p>No one has left any messages.</p>
        }
    </div>
</div>
